source "https://rubygems.org"

# -- Framework de Pruebas --
gem "rspec"                # Para validaciones y pruebas unitarias
gem "cucumber"             # Para escribir pruebas en lenguaje natural (BDD) 

# -- Automatización Web (Frontend) --
gem "capybara"             # Maneja el navegador de forma sencilla
gem "selenium-webdriver"   # El motor que mueve el navegador
gem "site_prism"           # Nos ayuda a aplicar el patrón Page Object Model (SOLID) 

# -- Automatización API y Contratos --
gem "httparty"             # Para hacer peticiones GET/POST a la API
gem "pact"                 # Para las pruebas de contrato

# -- Herramientas de Ayuda --
gem "pry"                  # Para depurar (debug) si algo falla